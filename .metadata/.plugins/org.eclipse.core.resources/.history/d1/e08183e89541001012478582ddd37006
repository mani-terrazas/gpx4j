package org.casaca.gpx4j.core.data;

public class Email extends BaseObject {
	private String id;
	private String domain;
	
	public Email(String id, String domain) throws IllegalArgumentException{
		if(id == null || domain == null) throw new IllegalArgumentException("Id and domain must not be null");

		this.id = id;
		this.domain = domain;
	}

	public String getId() {
		return id;
	}

	public String getDomain() {
		return domain;
	}
	
	public String toString(){
		return id+"@"+domain;
	}
}
