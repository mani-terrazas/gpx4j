package org.casaca.gpx4j.core.driver.reader.sax;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileNotFoundException;
import java.io.IOException;
import java.io.InputStream;

import org.casaca.gpx4j.core.data.GpxDocument;
import org.casaca.gpx4j.core.driver.reader.IGpxReader;
import org.casaca.gpx4j.core.exception.GpxFileNotFoundException;
import org.casaca.gpx4j.core.exception.GpxIOException;
import org.casaca.gpx4j.core.exception.GpxReaderException;
import org.jdom.Document;
import org.jdom.Element;
import org.jdom.JDOMException;
import org.jdom.input.SAXBuilder;

public class GpxReader implements IGpxReader {
	
	public static final String GPX_VERSION = "1.1";

	@Override
	public GpxDocument readGpxDocument(File input) throws GpxFileNotFoundException, GpxIOException, GpxReaderException{		
		try {
			return this.readGpxDocument(new FileInputStream(input));
		} catch (FileNotFoundException e) {
			throw new GpxFileNotFoundException(e.getMessage());
		}
	}

	@Override
	public GpxDocument readGpxDocument(InputStream input) throws GpxIOException, GpxReaderException {
		try {
			SAXBuilder builder = new SAXBuilder(true);
			Document document = builder.build(input);
			Element root = document.getRootElement();
		} catch (JDOMException e) {
			throw new GpxReaderException(e.getMessage());
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}
}
